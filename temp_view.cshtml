@model QlySukienSV.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Trang chủ";
}


<div class="container">
    <div class="col-12">
        <h5 class="mb-3">CLB đang hoạt động</h5>
        <div class="row g-3">
            @foreach (var c in Model.Clbs)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h6 class="card-title">@c.TenCLB</h6>
                            <p class="text-muted small">@c.MoTa</p>
                            <a class="btn btn-sm btn-outline-primary" asp-action="ChiTietCLB" asp-route-id="@c.Id">Chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-12">
        <h5 class="mt-4 mb-3">Sự kiện nổi bật</h5>
        <div class="row g-3">
            @foreach (var sk in Model.NoiBatSuKiens)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-primary">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h6 class="card-title">@sk.TenSuKien</h6>
                                <span class="badge text-bg-primary">Nổi bật</span>
                            </div>
                            <div class="small text-muted">@sk.CLB?.TenCLB</div>
                            <div class="small">@sk.NgayBatDau - @sk.NgayKetThuc</div>
                            <div>@sk.DiaDiem</div>
                            <a class="btn btn-sm btn-outline-primary mt-2" asp-action="ChiTietSuKien" asp-route-id="@sk.Id">Xem</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-12">
        <h5 class="mt-4 mb-3">Sắp diễn ra</h5>
        <div class="list-group">
            @foreach (var s in Model.UpcomingSuKiens)
            {
                <a class="list-group-item list-group-item-action" asp-action="ChiTietSuKien" asp-route-id="@s.Id">
                    <strong>@s.TenSuKien</strong>
                    <span class="text-muted"> - @s.CLB?.TenCLB</span>
                    <span class="float-end small">@s.NgayBatDau </span>
                </a>
            }
        </div>
    </div>
</div>
