@using QlySukienSV.Constants
@model QlySukienSV.Models.CLB
@{
    ViewData["Title"] = "Sửa CLB";
}
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">@ViewData["Title"]</h5>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="row g-3">
                <div class="col-md-8">
                    <label asp-for="TenCLB" class="form-label">Tên CLB</label>
                    <input asp-for="TenCLB" class="form-control" placeholder="Nhập tên CLB" />
                    <span asp-validation-for="TenCLB" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="NgayThanhLap" class="form-label">Ngày thành lập</label>
                    <input asp-for="NgayThanhLap" type="date" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="ChuNhiemId" class="form-label">Chủ nhiệm</label>
                    <select asp-for="ChuNhiemId" asp-items="@ViewBag.NguoiDungs" class="form-select">
                        <option value="">-- Chọn chủ nhiệm --</option>
                    </select>
                    <span asp-validation-for="ChuNhiemId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="TrangThai" class="form-label">Trạng thái</label>
                    <select asp-for="TrangThai" class="form-select">
                        <option value="@TrangThaiCLB.Active">Hoạt động</option>
                        <option value="@TrangThaiCLB.Inactive">Đã ngừng</option>
                    </select>
                </div>
                <div class="col-12">
                    <label asp-for="MoTa" class="form-label">Mô tả</label>
                    <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả về CLB..."></textarea>
                </div>
            </div>
            <div class="mt-3">
                <button class="btn btn-primary" type="submit">Lưu</button>
                <a class="btn btn-secondary" asp-action="Index">Hủy</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
