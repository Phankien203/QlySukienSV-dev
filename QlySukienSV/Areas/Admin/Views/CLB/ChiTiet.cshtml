@using QlySukienSV.Constants
@model QlySukienSV.Models.CLB
@{
    ViewData["Title"] = "Chi tiết CLB";
}

<div class="">
    <div class=" d-flex justify-content-between align-items-center">
        <h5 class="mb-0">@Model.TenCLB</h5>
        <a class="btn btn-secondary btn-sm" asp-action="Index">Quay lại</a>
    </div>
    <div class="">
        <!-- Thông tin CLB -->
        <div class="row mb-4">
            <div class="col-md-6">
                <p><strong>Chủ nhiệm:</strong> @Model.ChuNhiem?.HoTen</p>
                <p><strong>Ngày thành lập:</strong> @Model.NgayThanhLap.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="col-md-6">
                <p>
                    <strong>Trạng thái:</strong>
                    @if (Model.TrangThai == TrangThaiCLB.Active)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Đã ngừng</span>
                    }
                </p>
                <p><strong>Số lượng thành viên:</strong> @Model.ThanhViens.Count</p>
            </div>
        </div>

        <hr />

        <!-- Danh sách thành viên -->
        <h6 class="mb-3">Danh sách thành viên và phân quyền</h6>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Mã SV</th>
                        <th>Họ tên</th>
                        <th>Lớp</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Ngày tham gia</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ThanhViens.Any())
                    {
                        @foreach (var tv in Model.ThanhViens.Where(tv => tv.TrangThai != TrangThaiThanhVien.TuChoi).OrderBy(t => t.VaiTro == CLBRole.ChuNhiem ? 0 : t.VaiTro == CLBRole.PhoChuNhiem ? 1 : t.VaiTro == CLBRole.BanChapHanh ? 2 : 3))
                        {
                            <tr>
                                <td>@tv.NguoiDung?.MaSoSV</td>
                                <td>@tv.NguoiDung?.HoTen</td>
                                <td>@tv.NguoiDung?.Lop</td>
                                <td>
                                    <select class="form-select form-select-sm vai-tro-select" data-id="@tv.Id" style="min-width: 150px;">
                                        <option value="@CLBRole.ChuNhiem" selected="@(tv.VaiTro == CLBRole.ChuNhiem)">Chủ nhiệm</option>
                                        <option value="@CLBRole.PhoChuNhiem" selected="@(tv.VaiTro == CLBRole.PhoChuNhiem)">Phó chủ nhiệm</option>
                                        <option value="@CLBRole.BanChapHanh" selected="@(tv.VaiTro == CLBRole.BanChapHanh)">Ban chấp hành</option>
                                        <option value="@CLBRole.ThanhVien" selected="@(tv.VaiTro == CLBRole.ThanhVien)">Thành viên</option>
                                        <option value="@CLBRole.Khach" selected="@(tv.VaiTro == CLBRole.Khach)">Khách</option>
                                    </select>
                                </td>
                                <td>
                                    @if (tv.TrangThai == "DaDuyet")
                                    {
                                        <span class="badge bg-success">Đã duyệt</span>
                                    }
                                    else if (tv.TrangThai == "ChoDuyet")
                                    {
                                        <span class="badge bg-warning">Chờ duyệt</span>
                                    }
                                   
                                </td>
                                <td>@tv.NgayThamGia.ToString("dd/MM/yyyy")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">Chưa có thành viên nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Xử lý thay đổi vai trò
        document.querySelectorAll('.vai-tro-select').forEach(select => {
            select.addEventListener('change', async function() {
                const thanhVienId = this.dataset.id;
                const vaiTro = this.value;

                if (!confirm('Bạn có chắc muốn thay đổi vai trò của thành viên này?')) {
                    this.selectedIndex = this.options.selectedIndex; // Reset về giá trị cũ
                    return;
                }

                try {
                    const response = await fetch('@Url.Action("CapNhatVaiTro", "CLB")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `thanhVienId=${thanhVienId}&vaiTro=${encodeURIComponent(vaiTro)}`
                    });

                    const result = await response.json();

                    if (result.success) {
                        alert('Cập nhật vai trò thành công!');
                    } else {
                        alert('Lỗi: ' + result.message);
                        location.reload();
                    }
                } catch (error) {
                    alert('Có lỗi xảy ra: ' + error.message);
                    location.reload();
                }
            });
        });
    </script>
}
