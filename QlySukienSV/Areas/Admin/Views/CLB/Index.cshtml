@using QlySukienSV.Constants
@model List<QlySukienSV.Models.CLB>
@{
    ViewData["Title"] = "CLB";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">Danh sách CLB</h5>
    <a class="btn btn-primary" asp-action="Create">Thêm CLB</a>
</div>
<table class="table table-striped table-sm">
    <thead><tr><th>Tên</th><th>Chủ nhiệm</th><th>Số lượng thành viên</th><th>Trạng thái</th><th></th></tr></thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.TenCLB</td>
                <td>@c.ChuNhiem?.HoTen</td>
                <td>@c.ThanhViens.Where(tv => tv.TrangThai != TrangThaiThanhVien.TuChoi).Count()</td>

                @if (c.TrangThai == "Active")
                {
                    <td><span class="badge bg-success">Đang hoạt động</span></td>
                }
                else if (c.TrangThai == "Inactive")
                {
                    <td><span class="badge bg-danger">Đã ngừng</span></td>
                }
                else
                {
                    <td>@c.TrangThai</td>
                }
                <td>
                    <a class="btn btn-sm btn-outline-info" asp-action="ChiTiet" asp-route-id="@c.Id">Chi tiết</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@c.Id">Sửa</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id" onclick="return confirm('Xóa?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
