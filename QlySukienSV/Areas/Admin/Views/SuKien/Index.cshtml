@model IEnumerable<QlySukienSV.Models.SuKien>
@{
  ViewData["Title"] = "Sự kiện";
}
<div class="d-flex justify-content-between align-items-center mb-3">
  <h5 class="mb-0">Sự kiện</h5>
  <a class="btn btn-primary" asp-action="Create">Tạo sự kiện</a>
</div>
<table class="table table-striped table-sm">
  <thead><tr><th>Tên</th><th>CLB</th><th>Bắt đầu</th><th>Trạng thái</th><th></th></tr></thead>
  <tbody>
  @foreach(var s in Model){
    <tr>
      <td>@s.TenSuKien</td>
      <td>@s.CLB?.TenCLB</td>
      <td>@s.NgayBatDau</td>
      <td>@s.TrangThai</td>
      <td>
        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@s.Id">Sửa</a>
        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@s.Id" onclick="return confirm('Xóa?');">Xóa</a>
      </td>
    </tr>
  }
  </tbody>
</table>
