@using QlySukienSV.Constants
@model QlySukienSV.Models.SuKien
@{
  ViewData["Title"] = "Tạo sự kiện mới";
}
<div class="card">
  <div class="card-header">
    <h5 class="mb-0">@ViewData["Title"]</h5>
  </div>
  <div class="card-body">
    <form method="post">
      <div class="row g-3">
        <div class="col-md-8">
          <label asp-for="TenSuKien" class="form-label">Tên sự kiện</label>
          <input asp-for="TenSuKien" class="form-control" placeholder="Nhập tên sự kiện" />
          <span asp-validation-for="TenSuKien" class="text-danger"></span>
        </div>
        <div class="col-md-4">
          <label asp-for="CLBId" class="form-label">CLB tổ chức</label>
          <select asp-for="CLBId" asp-items="@ViewBag.CLBs" class="form-select">
            <option value="">-- Chọn CLB --</option>
          </select>
          <span asp-validation-for="CLBId" class="text-danger"></span>
        </div>
        <div class="col-md-6">
          <label asp-for="NgayBatDau" class="form-label">Ngày bắt đầu</label>
          <input asp-for="NgayBatDau" type="datetime-local" class="form-control" />
        </div>
        <div class="col-md-6">
          <label asp-for="NgayKetThuc" class="form-label">Ngày kết thúc</label>
          <input asp-for="NgayKetThuc" type="datetime-local" class="form-control" />
        </div>
        <div class="col-md-8">
          <label asp-for="DiaDiem" class="form-label">Địa điểm</label>
          <input asp-for="DiaDiem" class="form-control" placeholder="Nhập địa điểm tổ chức" />
        </div>
        <div class="col-md-4">
          <label asp-for="TrangThai" class="form-label">Trạng thái</label>
          <select asp-for="TrangThai" class="form-select">
            <option value="@TrangThaiSuKien.SapDienRa">Sắp diễn ra</option>
            <option value="@TrangThaiSuKien.HoanThanh">Hoàn thành</option>
            <option value="@TrangThaiSuKien.Huy">Hủy</option>
          </select>
        </div>
        <div class="col-12">
          <div class="form-check">
            <input asp-for="NoiBat" class="form-check-input" />
            <label asp-for="NoiBat" class="form-check-label">Đánh dấu là sự kiện nổi bật</label>
          </div>
        </div>
        <div class="col-12">
          <label asp-for="MoTa" class="form-label">Mô tả</label>
          <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả về sự kiện..."></textarea>
        </div>
      </div>
      <div class="mt-3">
        <button class="btn btn-primary" type="submit">Lưu</button>
        <a class="btn btn-secondary" asp-action="Index">Hủy</a>
      </div>
    </form>
  </div>
</div>
@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}