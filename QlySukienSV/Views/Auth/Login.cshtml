@model QlySukienSV.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container d-flex align-items-center justify-content-center" style="min-height:70vh">
    <div class="card shadow-sm" style="max-width:420px; width:100%">
        <div class="mt-3 text-center">
            <h3 class="mb-2">Đăng nhập</h3>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="Identifier" class="form-label"></label>
                    <input asp-for="Identifier" class="form-control" placeholder="Mã SV hoặc Email" />
                    <span asp-validation-for="Identifier" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" placeholder="Mật khẩu" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <button class="btn btn-primary w-100" type="submit">Đăng nhập</button>
                <div class="text-center mt-3">
                    <span class="text-muted">Chưa có tài khoản?</span>
                    <a asp-action="Register" class="text-decoration-none">Đăng ký ngay</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}