@model QlySukienSV.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container d-flex align-items-center justify-content-center" style="min-height:70vh">
    <div class="card shadow-sm" style="max-width:500px; width:100%">
        <div class="mt-3 text-center">
            <h3 class="mb-2">Đăng ký tài khoản</h3>
        </div>
        <div class="card-body">
            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="MaSoSV" class="form-label"></label>
                    <input asp-for="MaSoSV" class="form-control" placeholder="Nhập mã sinh viên" />
                    <span asp-validation-for="MaSoSV" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label"></label>
                    <input asp-for="HoTen" class="form-control" placeholder="Nhập họ và tên" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Lop" class="form-label"></label>
                    <input asp-for="Lop" class="form-control" placeholder="Ví dụ: CNTT K45" />
                    <span asp-validation-for="Lop" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu (tối thiểu 6 ký tự)" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="SoDienThoai" class="form-label"></label>
                    <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại (không bắt buộc)" />
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>
                <button class="btn btn-primary w-100" type="submit">Đăng ký</button>
                <div class="text-center mt-3">
                    <span class="text-muted">Đã có tài khoản?</span>
                    <a asp-action="Login" class="text-decoration-none">Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
