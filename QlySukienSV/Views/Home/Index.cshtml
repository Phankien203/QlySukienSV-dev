@model QlySukienSV.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Trang chủ";
}


<div class="container">
    <!-- Hero + sidebar news using 7 images in wwwroot/img -->
    <section class="mb-4">
        <div class="row g-3">
            <div class="col-12 col-lg-8">
                <div id="heroCarousel" class="carousel slide rounded overflow-hidden shadow-sm" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
                    </div>
                    <div class="carousel-inner home-hero">
                        <div class="carousel-item active">
                            <img src="~/img/img1.jpg" class="d-block w-100" alt="slide 1" asp-append-version="true" />
                            <div class="carousel-caption text-start">
                                <span class="badge bg-danger me-2">Tiêu điểm</span>
                                <h5 class="mb-1">Hoạt động nổi bật tuần này</h5>
                                <p class="mb-0 small opacity-75">Cập nhật nhanh những khoảnh khắc mới nhất.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/img2.jpg" class="d-block w-100" alt="slide 2" asp-append-version="true" />
                            <div class="carousel-caption text-start">
                                <span class="badge bg-primary me-2">Sự kiện</span>
                                <h5 class="mb-1">Sinh viên tình nguyện</h5>
                                <p class="mb-0 small opacity-75">Lan tỏa năng lượng tích cực trong cộng đồng.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/img3.jpg" class="d-block w-100" alt="slide 3" asp-append-version="true" />
                            <div class="carousel-caption text-start">
                                <span class="badge bg-success me-2">Tin mới</span>
                                <h5 class="mb-1">Giao lưu và kết nối CLB</h5>
                                <p class="mb-0 small opacity-75">Không khí sôi nổi và sẵn sàng bứt phá.</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/img/img4.jpg" class="d-block w-100" alt="slide 4" asp-append-version="true" />
                            <div class="carousel-caption text-start">
                                <span class="badge bg-warning text-dark me-2">Góc nhìn</span>
                                <h5 class="mb-1">Khoảnh khắc đáng nhớ</h5>
                                <p class="mb-0 small opacity-75">Nhìn lại những hình ảnh ấn tượng.</p>
                            </div>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white py-2">
                        <div class="d-flex align-items-center">
                            <span class="badge bg-light text-primary me-2">MỚI</span>
                            <strong>Tin mới</strong>
                        </div>
                    </div>
                    <div class="list-group list-group-flush small">
                        <a class="list-group-item list-group-item-action d-flex gap-2" href="#">
                            <img src="~/img/img5.jpg" width="64" height="48" class="rounded object-fit-cover flex-shrink-0" alt="thumb 1" asp-append-version="true" />
                            <div>
                                <div class="fw-semibold">Chương trình giao lưu</div>
                                <div class="text-muted">Cập nhật 5 phút trước</div>
                            </div>
                        </a>
                        <a class="list-group-item list-group-item-action d-flex gap-2" href="#">
                            <img src="~/img/img6.jpg" width="64" height="48" class="rounded object-fit-cover flex-shrink-0" alt="thumb 2" asp-append-version="true" />
                            <div>
                                <div class="fw-semibold">Hoạt động CLB</div>
                                <div class="text-muted">Hôm nay</div>
                            </div>
                        </a>
                        <a class="list-group-item list-group-item-action d-flex gap-2" href="#">
                            <img src="~/img/img7.jpg" width="64" height="48" class="rounded object-fit-cover flex-shrink-0" alt="thumb 3" asp-append-version="true" />
                            <div>
                                <div class="fw-semibold">Điểm nhấn tuần</div>
                                <div class="text-muted">Tuần này</div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Promo banner -->
    <section class="mb-4">
        <div class="ratio ratio-21x9 rounded overflow-hidden shadow-sm banner-wrap">
            <img src="~/img/img6.jpg" class="w-100 h-100 object-fit-cover" alt="banner" asp-append-version="true" />
            <div class="banner-overlay">
                <div class="container p-3">
                    <span class="badge bg-success">Chiến dịch</span>
                    <h5 class="mt-2 mb-0">Thanh niên tình nguyện hè</h5>
                </div>
            </div>
        </div>
    </section>

    <!-- Image gallery grid -->
    <section class="mb-4">
        <h5 class="mb-3">Thư viện ảnh</h5>
        <div class="row g-3">
            <div class="col-6 col-md-4">
                <div class="gallery-tile">
                    <img src="~/img/img1.jpg" class="w-100 h-100 object-fit-cover" alt="img1" asp-append-version="true" />
                    <div class="tile-caption">Khoảnh khắc 1</div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="gallery-tile">
                    <img src="~/img/img2.jpg" class="w-100 h-100 object-fit-cover" alt="img2" asp-append-version="true" />
                    <div class="tile-caption">Khoảnh khắc 2</div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="gallery-tile">
                    <img src="~/img/img3.jpg" class="w-100 h-100 object-fit-cover" alt="img3" asp-append-version="true" />
                    <div class="tile-caption">Khoảnh khắc 3</div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="gallery-tile">
                    <img src="~/img/img4.jpg" class="w-100 h-100 object-fit-cover" alt="img4" asp-append-version="true" />
                    <div class="tile-caption">Khoảnh khắc 4</div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="gallery-tile">
                    <img src="~/img/img5.jpg" class="w-100 h-100 object-fit-cover" alt="img5" asp-append-version="true" />
                    <div class="tile-caption">Khoảnh khắc 5</div>
                </div>
            </div>
            <div class="col-6 col-md-4">
                <div class="gallery-tile">
                    <img src="~/img/img6.jpg" class="w-100 h-100 object-fit-cover" alt="img6" asp-append-version="true" />
                    <div class="tile-caption">Khoảnh khắc 6</div>
                </div>
            </div>
            <div class="col-12">
                <div class="gallery-tile" style="height: 220px;">
                    <img src="~/img/img7.jpg" class="w-100 h-100 object-fit-cover" alt="img7" asp-append-version="true" />
                    <div class="tile-caption">Khoảnh khắc 7</div>
                </div>
            </div>
        </div>
    </section>

    <style>
        .home-hero .carousel-item {
            height: 380px;
            position: relative;
        }

            .home-hero .carousel-item::after {
                content: "";
                position: absolute;
                inset: 0;
                background: linear-gradient(180deg, rgba(0,0,0,0) 55%, rgba(0,0,0,.7) 100%);
                z-index: 1;
            }

        .home-hero img {
            height: 100%;
            object-fit: cover;
        }

        .home-hero .carousel-caption {
            z-index: 2;
            left: 1rem;
            right: 1rem;
            bottom: 1.25rem;
            text-shadow: 0 2px 8px rgba(0,0,0,.6);
        }

        .banner-wrap {
            position: relative;
        }

        .banner-overlay {
            position: absolute;
            inset: 0;
            display: flex;
            align-items: end;
            background: linear-gradient(180deg, rgba(0,0,0,0) 40%, rgba(0,0,0,.35));
            color: #fff;
        }

        .gallery-tile {
            position: relative;
            height: 180px;
            border-radius: .5rem;
            overflow: hidden;
            box-shadow: 0 .125rem .5rem rgba(0,0,0,.08);
        }

            .gallery-tile .tile-caption {
                position: absolute;
                left: 0;
                right: 0;
                bottom: 0;
                padding: .5rem .75rem;
                background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,.55) 100%);
                color: #fff;
                font-weight: 600;
                font-size: .9rem;
            }

        @@media (max-width: 768px) {
            .home-hero .carousel-item {
                height: 220px;
            }

            .gallery-tile {
                height: 140px;
            }
        }
    </style>
    <div class="col-12">
        <h5 class="mb-3">CLB đang hoạt động</h5>
        <div class="row g-3">
            @foreach (var c in Model.Clbs)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h6 class="card-title">@c.TenCLB</h6>
                            <p class="text-muted small">@c.MoTa</p>
                            <a class="btn btn-sm btn-outline-primary" asp-action="ChiTietCLB" asp-route-id="@c.Id">Chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-12">
        <h5 class="mt-4 mb-3">Sự kiện nổi bật</h5>
        <div class="row g-3">
            @foreach (var sk in Model.NoiBatSuKiens)
            {
                @if (sk.TrangThai == TrangThaiSuKien.SapDienRa && sk.NoiBat == true)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card h-100 border-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h6 class="card-title">@sk.TenSuKien</h6>
                                    <span class="badge text-bg-primary">Nổi bật</span>
                                </div>
                                <div class="small text-muted">@sk.CLB?.TenCLB</div>
                                <div class="small">@sk.NgayBatDau - @sk.NgayKetThuc</div>
                                <div>@sk.DiaDiem</div>
                                <a class="btn btn-sm btn-outline-primary mt-2" asp-action="ChiTietSuKien" asp-route-id="@sk.Id">Xem</a>
                            </div>
                        </div>
                    </div>
                }

            }
        </div>
    </div>
    <div class="col-12">
        <h5 class="mt-4 mb-3">Sắp diễn ra</h5>
        <div class="list-group">
            @foreach (var s in Model.UpcomingSuKiens)
            {
                <a class="list-group-item list-group-item-action" asp-action="ChiTietSuKien" asp-route-id="@s.Id">
                    <strong>@s.TenSuKien</strong>
                    <span class="text-muted"> - @s.CLB?.TenCLB</span>
                    <span class="float-end small">@s.NgayBatDau </span>
                </a>
            }
        </div>
    </div>
</div>
